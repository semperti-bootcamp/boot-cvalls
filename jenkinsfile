pipeline {
    

    agent {
        node (){
            label 'bc-cvalls'
        } 
    }
    environment {
        ANSIBLE_HOST_KEY_CHECKING = 'false'
    }

    stages {   
        stage('Unit Test & Package') {
            steps {
                    sh "mvn test -f /home/api/Code/"   
                    sh "mvn package -f /home/api/Code/"   
                
            }
        }
        
          stage('Clean & Generate Snapshot') {
            steps {
                    sh "mvn versions:set -DnewVersion=2.0.3-SNAPSHOT -f /home/api/Code/pom.xml"
                    sh "mvn -B clean deploy -DnewVersion=2.0.3-SNAPSHOT -f /home/api/Code/"   
                
            }
        }
        stage('Release & Deploy Image to Nexus'){
            steps{  
                  
                   sh "mvn -B release:clean release:prepare release:perform    -f /home/api/Code/ -DcheckModificationExcludeList=** "   
                 
              
            }
        }
        stage('Docker build & tag images') {
            steps {
                
                sh "sudo docker build -f Dockerfile -t  api_java:2.0 ."
                sh "sudo docker tag api_java:2.0 christianvalls86/api_java:2.0"
            }
        }
    }

}